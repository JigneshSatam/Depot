- if product.errors.any?
  %h1= pluralize(@product.errors.count, "error")
  %h3 prohibited this flight from being saved:
  - product.errors.full_messages.each do |msg|
    %li= msg

= form_for product do |f|
  = f.label :title
  %br
  = f.text_field :title
  %br
  = f.label :description
  %br
  = f.text_area :description, rows: 6
  %br
  = f.label :image_url
  %br
  = f.text_field :image_url
  %br
  = f.label :price
  %br
  = f.text_field :price
  %br
  = f.submit
